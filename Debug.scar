  WriteLn(S);
End;

{******************************************************************************}
{ Procedure MSI_SaveReport;                                                    }
{ By: Naum                                                                     }
{ Description: Saves the report in the MSI Progress Reports folder             }
{******************************************************************************}

Procedure MSI_SaveReport;
Var FileH : Integer;
    Path, Debug, FileS : String;
Begin
  Path := AppPath+'Includes\SRL\SRL\MSI\MSI Progress Reports\';
  WriteLn(Path);
  FileS := Copy(TheTime, 1, Pos('PM', TheTime) - 2);
  FileS := Replace(FileS, ':', '-');
  WriteLn(FileS);
  FileH := ReWriteFile(Path + FileS + ' ' + TheDate(Date_Formal) + '.txt', False);
  WriteLn(Path + FileS + ' ' + TheDate(Date_Formal));
  Debug := Copy(GetDebugText, (LastPos('MSI Extreme', GetDebugText) - 88),
           iAbs((LastPos('}', GetDebugText)+1) - (LastPos('MSI Extreme', GetDebugText) - 88)));
  FileS := Debug;
  WriteFileString(FileH, 'Progress Report Saved:'+#13+#10);
  WriteFileString(FileH, #13+#10+'This proggie was written '+TheTime+' at '+TheDate(Date_Formal)+#13+#10);
  WriteFileString(FileH, FileS);
  CloseFile(FileH);
End;


{******************************************************************************}
{ procedure ProgressReport;                                                    }
{ By: Coh3n                                                                    }
{ Description: Prints the progress report of each player                       }
{******************************************************************************}
function MSI_GetItemList(whichPlayer, whichSkill: Integer): TIntegerArray; forward;
procedure ProgressReport;
var
  i, j, k: integer;
  skill, item: TStringArray;
  intItems: TIntegerArray;
begin
  ClearReport;
  GetReportInfo;
  AddToBoxes('{----------------------------------------------------------------}');
  AddToBoxes('{                   MSI Extreme Player Report                    }');
  AddToBoxes('{----------------------------------------------------------------}'); //64 from '{' to '}'
  AddToBoxes('{     ' + PadR('Time Running: ' + TimeRunning, 59) + '}');
  AddToBoxes('{----------------------------------------------------------------}');
  
  for i := 0 to (HowManyPlayers - 1) do
    with ProgressReportArray[i] do
    begin
      AddToBoxes('{                                                                }');
      //          {     Player 0: Player Name                                      }
      AddToBoxes('{     ' + PadR('Player ' + IntToStr(i) + ': ' + Capitalize(PlayerName), 59) + '}'); //PlayerName
      //          {     City: Varrock                                              }
      AddToBoxes('{     ' + PadR('City: ' + LocToText(PlayerCity), 59) + '}');                        //PlayerCity
      //          {     Location: VE_Trees                                         }
      AddToBoxes('{     ' + PadR('Location: ' + LocToText(PlayerLoc), 59) + '}');                     //PlayerLoc
      //          {     Time: 02h, 33m, 45s                                         }
      AddToBoxes('{     ' + PadR('Time: ' + MsToTime(PlayerTime, Time_Short), 59) + '}');             //TotalTime
      //          {     Active: True                                               }
      AddToBoxes('{     ' + PadR('Active: ' + Capitalize(BoolToStr(PlayerStatus)), 59) + '}');        //PlayerStatus
      if (not PlayerStatus) then
        //           {       Reason: Failed to bank items                             }               //FalseReason
        AddToBoxes('{       ' + PadR('Reason: ' + FalseReason, 57) + '}');
      AddToBoxes('{                                                                }');

      for j := 0 to High(SkillInfo) do                                                                  //SkillInfo
        with SkillInfo[j] do
        begin
          skill := SkillTextArray(PlayerSkills[CurrentPlayer][j]);
          //          {     Skill: Woodcutting                                         }
          AddToBoxes('{     ' + PadR('Skill: ' + skill[0], 59) + '}');
          //          {       Skill Time: 02h, 45m, 33s                                }
          AddToBoxes('{       ' + PadR('Skill Time: ' + MsToTime(TotalTime, Time_Short), 57) + '}');     //TotalTime
          //          {       Loads: 45                                                }
          AddToBoxes('{       ' + PadR('Loads: ' + IntToStr(TotalLoads), 57) + '}');                    //TotalLoads
          //          {       Experience: 38,650                                       }
          AddToBoxes('{       ' + PadR('Experience: ' + GroupDigits(Round(TotalEXP), ','), 57) + '}');  //TotalEXP
          //          {       Level: 91                                                }
          AddToBoxes('{       ' + PadR('Level: ' + IntToStr(Level), 57) + '}');                         //Level

          intItems := MSI_GetItemList(i, j);
          for k := 0 to High(intItems) do                                                            //TotalObj
          begin
            item := ObjTextArray(PlayerSkills[CurrentPlayer][j], intItems[k]);
            //          {         Item: Normal logs                                      }
            AddToBoxes('{         ' + PadR('Item: ' + item[0], 55) + '}');
            //          {         Amount: 1,546                                          }
            AddToBoxes('{         ' + PadR('Amount: ' + GroupDigits(ObjQuants[k], ','), 55) + '}');     //ObjQuants
          end;
          
          AddToBoxes('{                                                                }');
          AddToBoxes('{----------------------------------------------------------------}');
        end;
    end;
  
  AddToBoxes('{----------------------------------------------------------------}');
  MSI_SaveReport;
end;